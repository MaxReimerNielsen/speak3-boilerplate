{
  "name": "speak3-boilerplate",
  "version": "1.0.0",
  "description": "This is a complete start up repository for creating Sitecore applications in React.",
  "main": "index.js",
  "scripts": {
    "build": "npm-run-all build:clean lint build:prod",
    "build:prod": "cross-env NODE_ENV=production webpack --config webpack-prod.config.js",
    "build:clean": "rimraf build/",
    "lint": "eslint src && echo ESLint: Project checked.",
    "lint:fix": "eslint src --fix",
    "pre-commit-message": "echo 'Pre-commit checks starting...' && exit 0",
    "start": "nodemon ./server.js",
    "test": "karma start",
    "test:specific": "karma start --browsers PhantomJS --auto-watch --no-single-run",
    "test:chrome": "karma start --browsers Chrome",
    "test:firefox": "karma start --browsers Firefox",
    "test:phantomjs": "karma start --browsers PhantomJS",
    "test:ie": "karma start --browsers IE",
    "test:check-coverage": "istanbul check-coverage --statement 50",
    "validate": "npm-run-all validate:webpack lint test:all test:check-coverage",
    "validate:webpack": "npm-run-all --parallel validate:webpack:basic validate:webpack:dev validate:webpack:prod validate:webpack:test",
    "validate:webpack:basic": "webpack-validator webpack-basic.config.js",
    "validate:webpack:dev": "webpack-validator webpack-dev.config.js",
    "validate:webpack:prod": "webpack-validator webpack-prod.config.js",
    "validate:webpack:test": "webpack-validator webpack-test.config.js"
  },
  "pre-commit": [
    "pre-commit-message",
    "lint:all"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MaxReimerNielsen/speak3-boilerplate.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MaxReimerNielsen/speak3-boilerplate/issues"
  },
  "homepage": "https://github.com/MaxReimerNielsen/speak3-boilerplate#readme",
  "dependencies": {
    "history": "^3.0.0",
    "react": "^15.1.0",
    "react-dom": "^15.1.0",
    "react-router": "^2.4.1"
  },
  "devDependencies": {
    "babel-cli": "^6.10.1",
    "babel-core": "^6.9.1",
    "babel-eslint": "^6.0.4",
    "babel-loader": "^6.2.4",
    "babel-plugin-__coverage__": "^11.0.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-1": "^6.5.0",
    "babel-register": "^6.9.0",
    "chai": "^3.5.0",
    "chai-spies": "^0.7.1",
    "cross-env": "^1.0.8",
    "enzyme": "^2.3.0",
    "eslint": "^2.12.0",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-import-resolver-webpack": "^0.3.0",
    "eslint-plugin-import": "^1.8.1",
    "eslint-plugin-jsx-a11y": "^1.4.2",
    "eslint-plugin-react": "^5.1.1",
    "file-loader": "^0.9.0",
    "html-webpack-plugin": "^2.21.0",
    "istanbul": "^0.4.4",
    "json-loader": "^0.5.4",
    "karma": "^0.13.22",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^1.0.1",
    "karma-cli": "^1.0.0",
    "karma-coverage": "^1.0.0",
    "karma-firefox-launcher": "^1.0.0",
    "karma-ie-launcher": "^1.0.0",
    "karma-mocha": "^1.0.1",
    "karma-phantomjs-launcher": "^1.0.0",
    "karma-webpack": "^1.7.0",
    "mocha": "^2.5.3",
    "nodemon": "^1.9.2",
    "npm-run-all": "^2.2.0",
    "phantomjs-prebuilt": "^2.1.7",
    "pre-commit": "^1.1.3",
    "radium": "^0.17.1",
    "react-addons-test-utils": "^15.1.0",
    "react-hot-loader": "^1.3.0",
    "rimraf": "^2.5.2",
    "source-map-loader": "^0.1.5",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1",
    "webpack-validator": "^2.1.3"
  }
}
